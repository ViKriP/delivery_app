%p.in-gold-500.font-18.mb-25
  = t('new_package')
= form_for @package, url: courier_packages_path(@courier.id), method: :post, class: "general-form-md" do |f|
  .form-group.mb-35{class: "#{error_class(@package, :tracking_number)}"}
    = f.label :tracking_number, t('tracking_number'), class: "control-label input-label"
    = f.text_field :tracking_number, class: "form-control"
    %span.help-block= show_errors(@package, :tracking_number)
  .form-group.mb-35{class: "#{error_class(@package, :delivery_status)}"}
    = f.label :delivery_status, t('delivery_status'),class: "control-label input-label"
    = f.check_box :delivery_status, class: "form-control"
    %span.help-block= show_errors(@package, :delivery_status)
  .general-text-align
    = f.button t('create'), class: 'btn btn-default mb-35', name: "commit", value: "create"
