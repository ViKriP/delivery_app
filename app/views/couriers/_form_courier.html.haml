%p.in-gold-500.font-18.mb-25
= form_for @courier, url: couriers_path, method: :post, class: "general-form-md" do |f|
  .form-group.mb-35{class: "#{error_class(@courier, :name)}"}
    = f.label :name, t('name'), class: "control-label input-label"
    = f.text_field :name, class: "form-control"
    %span.help-block= show_errors(@courier, :name)
  .form-group.mb-35{class: "#{error_class(@courier, :email)}"}
    = f.label :email, t('email'),class: "control-label input-label"
    = f.email_field :email, placeholder: t('enter_email'), class: "form-control"
    %span.help-block= show_errors(@courier, :email)
  .general-text-align
    = f.button t('create'), class: 'btn btn-default mb-35', name: "commit", value: "create"
